<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="height_percent" format="float" />
    <attr name="height_weight" format="integer" />
    <attr name="round_radius" format="dimension" />
    <attr name="shape_mode">
        <enum name="normal" value="1" />
        <enum name="two_corners" value="2" />
    </attr>
    <attr name="ylabel_text_margin" format="dimension" />

    <declare-styleable name="MultiColorLineChart">
        <!--    曲线图的高度    -->
        <attr name="chartHeight" format="dimension" />
        <!--    曲线图的线条宽度    -->
        <attr name="chartLineWidth" format="dimension" />
        <!--    曲线图的线条充电颜色    -->
        <attr name="chartLineChargeColor" format="color" />
        <!--    曲线图的线条低电量颜色    -->
        <attr name="chartLineLowBatteryColor" format="color" />
        <!--    曲线图的线条耗电颜色    -->
        <attr name="chartLineNoChargeColor" format="color" />

        <attr name="chartAboveTextSize" format="dimension" />
        <attr name="chartAboveTextColor" format="color" />
        <!--   未选中时的背景色      -->
        <attr name="chartNoSelectedBgColor" format="color" />
        <attr name="chartNoSelectedBottomBgColor" format="color" />
        <!--    底部间距    -->
        <attr name="chartBottomPadding" format="dimension" />
        <attr name="chartHorizontalLineColor" format="color" />
        <attr name="chartHorizontalLineWidth" format="dimension" />
        <attr name="chartVerticalLineVisible" format="boolean" />
        <attr name="chartVerticalLineColor" format="color" />
        <attr name="chartVerticalLineWidth" format="dimension" />
        <!--    右侧坐标    -->
        <attr name="chartRightLabelTextSize" format="dimension" />
        <attr name="chartRightLabelTextColor" format="color" />
        <attr name="chartRightLabelTextMargin" format="dimension" />
        <!--    气泡属性    -->
        <attr name="barBubbleEnable" format="boolean" />
        <attr name="barBubbleTopMargin" format="dimension" />
        <attr name="barBubbleBottomMargin" format="dimension" />
        <attr name="barBubbleLeftMargin" format="dimension" />
        <attr name="barBubbleRightMargin" format="dimension" />
        <attr name="barBubbleTextSize" format="dimension" />
        <attr name="barBubbleTextColor" format="color" />
        <attr name="barBubbleBackground" format="reference" />
        <attr name="barBubbleCornerRadius" format="dimension" />

    </declare-styleable>
</resources>
