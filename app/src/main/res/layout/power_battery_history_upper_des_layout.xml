<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/battery_history_des_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/battery_usage_margin"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <LinearLayout
            android:id="@+id/subhead_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/battery_des"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                style="@style/power_history_sub_header_style"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/today_screen_tip_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/today_screen_tip_layout"
                android:paddingTop="@dimen/list_padding_top_bottom_height"
                android:paddingBottom="@dimen/list_padding_top_bottom_height"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="@dimen/prevent_list_single_line_height"
                android:importantForAccessibility="yes">
                <com.android.hwsystemmanager.widgets.CardFirstTextView
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:id="@+id/today_screen_tip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_on_time_today"
                    android:singleLine="false"
                    android:layout_weight="3"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:gravity="end"
                    android:id="@+id/screen_on_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:layout_weight="2"
                    android:importantForAccessibility="no"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
