<?xml version="1.0" encoding="utf-8"?>
<com.android.hwsystemmanager.widgets.BatteryScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/battery_history_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/battery_history_upper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        android:visibility="gone">

        <include
            layout="@layout/power_battery_history_upper_des_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/battery_level_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/divider_line_new" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_battery_useage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_power_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:minHeight="@dimen/power_detail_subhead_height"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="@dimen/list_padding_top_bottom_height"
                android:paddingEnd="16dp"
                android:paddingBottom="@dimen/list_padding_top_bottom_height">

                <TextView
                    android:id="@+id/text_power_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/battery_level"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/layout_power_charge_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">

                    <!--                <com.android.hwsystemmanager.widgets.RoundRectImageView-->
                    <!--                    android:id="@+id/charge_imageview"-->
                    <!--                    android:layout_width="@dimen/charge_round_view_text"-->
                    <!--                    android:layout_height="@dimen/charge_round_view_text"-->
                    <!--                    android:layout_gravity="center_vertical"-->
                    <!--                    android:layout_marginEnd="@dimen/charge_margin_width"-->
                    <!--                    android:src="@color/charge_rect_color"-->
                    <!--                    app:round_radius="@dimen/default_corner_radius"-->
                    <!--                    app:shape_mode="normal" />-->

                    <!--                <TextView-->
                    <!--                    android:id="@+id/power_charge_time"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:gravity="end"-->
                    <!--                    android:text="@string/charge_time"-->
                    <!--                    android:textColor="?android:attr/textColorSecondary"-->
                    <!--                    android:textSize="14sp" />-->
                    <TextView
                        android:id="@+id/tv_battery_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:drawableStart="@drawable/battery_consum_status"
                        android:drawablePadding="6dp"
                        android:drawableTint="#6DD400"
                        android:text="@string/charge_time"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_battery_consumption"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_battery_consumption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:drawableStart="@drawable/battery_consum_status"
                        android:drawablePadding="6dp"
                        android:drawableTint="#0091FF"
                        android:text="@string/consumption_time"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_battery_loss"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_battery_loss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/battery_consum_status"
                        android:drawablePadding="6dp"
                        android:drawableTint="#FF5968"
                        android:text="@string/low_battery_time"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_bar_enter_text"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/battery_bar_chart_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.android.hwsystemmanager.widgets.BatteryHistoryOnlyChart
                        android:id="@+id/battery_stack_chart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:importantForAccessibility="no" />

                    <com.android.hwsystemmanager.widgets.BatteryBarChart1
                        android:id="@+id/battery_stack_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:gravity="center_vertical" />
                </FrameLayout>
            </RelativeLayout>

            <com.android.hwsystemmanager.multicolor.MultiColorLineChart
                android:id="@+id/battery_line_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="48dp"
                app:chartHeight="244dp"
                app:chartLineWidth="@dimen/battery_history_chart_linewidth"
                app:chartAboveTextColor="?android:attr/textColorSecondary"
                app:chartVerticalLineColor="@color/stroke_y_line_color_card"
                app:chartVerticalLineWidth="@dimen/battery_history_chart_y_line_size_card"
                app:chartHorizontalLineColor="@color/stroke_y_line_color_card"
                app:chartHorizontalLineWidth="@dimen/battery_history_chart_x_line_size_card"
                app:chartAboveTextSize="@dimen/battery_history_chart_aboveTimeText_size"
                app:chartLineChargeColor="@color/battery_charge_line_new_card"
                app:chartLineLowBatteryColor="@color/battery_low_battery_line_new_card"
                app:chartLineNoChargeColor="@color/battery_no_charge_line_new_card"
                app:chartNoSelectedBgColor="@color/battery_not_select_bg"
                app:chartNoSelectedBottomBgColor="@color/battery_not_select_bg_bottom_card"
                app:chartBottomPadding="@dimen/battery_history_chart_bottom_padding"
                app:chartLineMargin="@dimen/margin_bar_top_bubble"
                app:barBubbleEnable="true"
                app:barBubbleBackground="@color/battery_bubble_bg"
                app:barBubbleTextSize="@dimen/battery_history_chart_aboveTimeText_size"
                app:barBubbleTextColor="@color/white"
                app:barBubbleCornerRadius="@dimen/cardview_default_radius"
                app:chartRightLabelTextSize="@dimen/battery_history_chart_aboveTimeText_size"
                app:chartRightLabelTextColor="?android:attr/textColorSecondary"
                app:chartRightLabelTextMargin="@dimen/battery_maigin_text_percent"
                />
        </LinearLayout>
    </LinearLayout>
</com.android.hwsystemmanager.widgets.BatteryScrollView>
